<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
      <bean id="Properties"
    class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
 
    <property name="location" value="classpath:application.properties" />
 
</bean>

    
 
    
    <context:component-scan base-package="com.skh.email"></context:component-scan>
    
    <bean name="mailGenerator" class="com.skh.email.MailGenerator"/>
    
    <!-- Quartz Job -->
	<bean name="mailJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="com.skh.email.MailJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="mailGenerator" value-ref="mailGenerator" />
			</map>
		</property>
	</bean>
	
	
	<bean id="cronTriggerMailJob" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="mailJob" />
		<!-- <property name="cronExpression" value="0 16 13 1/1 * ? *" /> -->		
		<property name="cronExpression" value="0 0/1 0 1/1 * ? *" />
	</bean>


	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cronTriggerMailJob" />
			</list>
		</property>
	</bean>
    
    </beans>